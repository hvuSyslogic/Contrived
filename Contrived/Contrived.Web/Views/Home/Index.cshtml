@model IList<Contrived.Web.Models.PostModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-12">
            <h2>@post.Title</h2>
            <h6>By: @post.Author</h6>
            <h6>On: @post.PostDate.ToShortDateString()</h6>
            <p>@post.Body</p>
        </div>
    }
</div>
